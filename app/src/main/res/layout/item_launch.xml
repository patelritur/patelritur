<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="launchModel"
            type="com.demo.launch.model.LaunchResponseModel.Latestlaunchlist" />
    </data>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_10">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_margin="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginBottom="@dimen/margin_10"
            android:text="@{launchModel.carName}"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:fontFamily="@font/montserrat_semibold"
            android:textStyle="normal"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#222831"
            tools:text="JEEP COMPASS"/>

        <androidx.viewpager.widget.ViewPager
            android:nestedScrollingEnabled="true"
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            />
        <com.google.android.material.tabs.TabLayout
            android:nestedScrollingEnabled="true"
            android:layout_marginEnd="@dimen/margin_10"
            android:background="#00000000"
            android:id="@+id/into_tab_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tabBackground="@drawable/tab_selector"
            app:tabGravity="center"
            android:layout_gravity="center_horizontal"
            app:tabIndicatorHeight="0dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/launch_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:textStyle="normal"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#222831"
                android:layout_alignParentStart="true"
                android:text="@string/launch_date"/>
            <TextView
                android:layout_marginStart="@dimen/margin_5"
                android:layout_toEndOf="@+id/launch_date"
                android:text="@{launchModel.launchDate}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:textStyle="normal"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/color_241e61"
                tools:text="Jun 01, 2021"/>

            <TextView
                android:paddingStart="@dimen/margin_5"
                android:paddingEnd="@dimen/margin_5"
                android:layout_alignParentEnd="true"
                android:text="@{launchModel.bookingMsg}"
                android:background="#689e5a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:textStyle="bold"
                android:layout_gravity="end"
                android:gravity="end"
                android:textSize="12sp"
                android:textColor="#ffffff"
                tools:text="15 Booking slots left"/>

        </RelativeLayout>

        <TextView
            android:text="@{launchModel.carDescription}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat_regular"
            android:textStyle="normal"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:layout_marginTop="@dimen/margin_10"
            android:maxLines="3"
            android:textColor="#333333"
            android:letterSpacing="0.01"
            tools:text="The Jeep Renegadl ces to start from 10.00 Lakhâ€¦"/>

        <TextView
            android:id="@+id/book_demo"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingRight="@dimen/margin_20"
            android:paddingLeft="@dimen/margin_20"
            android:paddingTop="@dimen/margin_5"
            android:paddingBottom="@dimen/margin_5"
            android:layout_height="wrap_content"
            android:background="@drawable/border_red_deep_rounded_corner"
            android:fontFamily="@font/montserrat_regular"
            android:textStyle="normal"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/color_241e61"
            android:letterSpacing="0.01"
            android:text="@string/prebook_demo"/>

        <TextView
            android:id="@+id/book_meeting"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingRight="@dimen/margin_20"
            android:paddingLeft="@dimen/margin_20"
            android:paddingTop="@dimen/margin_5"
            android:paddingBottom="@dimen/margin_5"
            android:layout_height="wrap_content"
            android:background="@drawable/border_red_deep_rounded_corner"
            android:fontFamily="@font/montserrat_regular"
            android:textStyle="normal"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/color_241e61"
            android:letterSpacing="0.01"
            android:text="@string/prebook_demo"/>

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>
</layout>