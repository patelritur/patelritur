<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="filter"
            type="com.demo.home.model.AppContentModel" />
    </data>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
       android:layout_margin="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/firstCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:textStyle="normal"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/color_241e61"
            android:letterSpacing="0.01"
            android:checked="false"
            tools:text="Demo"
            android:backgroundTint="@color/color_241e61"
            android:text="@{filter.Labels.get(0).labelInLanguage}"/>
        <com.google.android.material.checkbox.MaterialCheckBox
            android:layout_width="wrap_content"
            android:id="@+id/secondCheckbox"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:textStyle="normal"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/color_241e61"
            android:letterSpacing="0.01"
            android:checked="false"
            android:backgroundTint="@color/color_241e61"
            tools:text="MEetong"
            android:text="@{filter.Labels.get(1).labelInLanguage}"/>
        <com.google.android.material.checkbox.MaterialCheckBox
            android:layout_width="wrap_content"
            android:id="@+id/thirdCheckbox"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:textStyle="normal"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:letterSpacing="0.01"
            android:textColor="@color/color_241e61"
            android:checked="false"
            tools:text="Virtual Meet"
            android:backgroundTint="@color/color_241e61"
            android:text="@{filter.Labels.get(2).labelInLanguage}"/>


    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:id="@+id/recyclerview_mydemotrips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_my_demo_trips"
        />

</androidx.appcompat.widget.LinearLayoutCompat>
</layout>