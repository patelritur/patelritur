<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="demoTrips"
            type="com.demo.home.profile.model.DemoTripResponseModel.Demotrip" />
    </data>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/margin_10"
    android:layout_margin="@dimen/margin_10"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/parent_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_20">

        <androidx.appcompat.widget.AppCompatImageView
            app:homeOptionsImage="@{demoTrips.carImage}"
            android:layout_width="90dp"
            android:layout_height="@dimen/margin_50">

        </androidx.appcompat.widget.AppCompatImageView>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textStyle="normal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#333333"
                    android:letterSpacing="0.01"
                    android:text="@{demoTrips.carName}"
                    tools:text="Maruti Ciaz"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textStyle="normal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/color_241e61"
                    android:letterSpacing="0.01"
                    android:text="@{demoTrips.demoDate}"
                    tools:text="Jan 21, 2021"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:fontFamily="@font/montserrat_semibold"
                android:textStyle="normal"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#333333"
                android:letterSpacing="0.01"
                android:text="@{demoTrips.specialistName}"
                tools:text="Remesh kumar"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:fontFamily="@font/montserrat_regular"
                android:textStyle="normal"
                android:textColor="#333333"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:text="@{demoTrips.companyName}"
                android:letterSpacing="0.01"
                tools:text="DD Motors, Mayapuri, New Delhi"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>
</layout>