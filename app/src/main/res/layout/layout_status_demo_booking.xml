<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="headerMessage"
            type="java.lang.String" />

        <variable
            name="statusMessage"
            type="java.lang.String" />

        <variable
            name="imageUrl"
            type="java.lang.String" />

    </data>
    <androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/parent_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            style="@style/drawer"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_marginBottom="@dimen/margin_20"
            android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back_icon"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/margin_40"
            android:layout_height="40dp"
            android:background="@drawable/ic_baseline_keyboard_arrow_left_24"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:text="@{headerMessage}"
            android:fontFamily="@font/montserrat_semibold"
            android:textStyle="normal"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#393939"
            android:letterSpacing="0.01"
            tools:text="Connecting now to a demo specialist for Demo at the Home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.AppCompatTextView
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:fontFamily="@font/montserrat_regular"
            android:textStyle="normal"
            android:textColor="#393939"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="3.5sp"
            android:gravity="center_horizontal"
            android:text="@{statusMessage}"
            tools:text="Finding a Demo Specialist for you"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_20"/>

        <androidx.appcompat.widget.AppCompatImageView
            app:homeOptionsImage="@{imageUrl}"
            android:layout_width="wrap_content"
            android:layout_height="180dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_20"
            android:id="@+id/available_specialist"
            android:fontFamily="@font/montserrat_regular"
            android:textStyle="normal"
            android:textColor="#393939"
            android:letterSpacing="0.01"
            android:lineSpacingExtra="3.5sp"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_20"
            android:id="@+id/cancel"
            android:text="Cancel"
            style="@style/redButton"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_red_deep_rounded_corner"
            android:text="Continue with other Specialists"
            android:visibility="gone"
            android:fontFamily="@font/montserrat_semibold"
            android:id="@+id/continue_other_specialists"
            android:padding="@dimen/margin_10"
            android:textColor="@color/color_241e61"/>
        <com.demo.utils.customviews.AVLoadingIndicatorView
            android:id="@+id/avi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AVLoadingIndicatorView.Small"
            android:visibility="visible"
            app:indicatorName="BallSpinFadeLoaderIndicator"
            app:indicatorColor="@color/color_241e61"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

</layout>
