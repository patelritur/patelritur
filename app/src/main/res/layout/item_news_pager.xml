<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="newsResponseModel"
            type="com.demo.news.NewsResponseModel.Newslist" />
    </data>
    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_margin="@dimen/margin_20"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back_icon"
            android:layout_width="30dp"
            android:layout_height="@dimen/textsize_30"
            android:layout_marginBottom="@dimen/margin_20"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_24"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="@{newsResponseModel.newsPostDate}"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:textStyle="normal"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#bababa"
                tools:text="29th Feb, 2021"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:tint="@color/color_241e61"
                android:src="@drawable/ic_baseline_share_24" />

        </RelativeLayout>

        <ScrollView
            android:layout_marginTop="@dimen/margin_10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_100"
                    android:scaleType="centerCrop"
                    app:homeOptionsImage="@{newsResponseModel.newsImage}"
                    />

                <TextView
                    android:text="@{newsResponseModel.newsTitle}"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_marginBottom="@dimen/margin_20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textStyle="normal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#222831"
                    tools:text="New looks that would kill!"/>


                <TextView
                    android:text="@{newsResponseModel.newsDesc}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_regular"
                    android:textStyle="normal"
                    android:scrollbars="vertical"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#222831"
                    tools:text="The new Seltos is here.. The launch is going to
         happen online and prebooking will open tomorrow… The new Seltos
         is here.. The launch is going to happen online and prebooking will
         open tomorrow…The new Seltos is here.. The launch is going to happen
          online and prebooking will open tomorrow…The new Seltos is here..
          The launch is going to happen online and prebooking will open
          tomorrow…The new Seltos is here.. The launch is going to happen
          online and prebooking will open tomorrow…The new Seltos is here..
          The launch is going to happen online and prebooking will open
          tomorrow…The new Seltos is here.. The launch is going to happen
         online and prebooking will open tomorrow…"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </ScrollView>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>