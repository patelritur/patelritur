<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="profile"
            type="com.demo.home.model.ProfileModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/header_layout"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/black"
            android:layout_marginStart="@dimen/margin_20"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_24"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/profile_image"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/profimg"
                app:roundProfileOptionsImage="@{profile.image}" />
            <TextView
                android:layout_toEndOf="@+id/profile_image"
                android:layout_centerVertical="true"
                android:id="@+id/edit_profilepicture"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:textStyle="normal"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/color_241e61"
                android:lineSpacingExtra="3.5sp"
                android:text="@string/edit"/>
        </RelativeLayout>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            >

            <androidx.appcompat.widget.AppCompatEditText
                android:enabled="false"
                android:inputType="textCapSentences"
                android:id="@+id/edittext_fname"
                android:backgroundTint="#00000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:textStyle="normal"
                android:textSize="20sp"
                android:textColor="#000000"
                android:text="@={profile.firstName}"
                android:imeOptions="actionNext"
                tools:text="Mukesh"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:enabled="false"
                android:inputType="textCapSentences"
                android:id="@+id/edittext_lname"
                android:layout_marginStart="@dimen/margin_5"
                android:backgroundTint="#00000000"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:fontFamily="@font/montserrat_semibold"
                android:textStyle="normal"
                android:textSize="20sp"
                android:textColor="#000000"
                android:text="@={profile.lastName}"
                tools:text=" Misra"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <TextView

            android:id="@+id/edit_profilename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/montserrat_regular"
            android:textStyle="normal"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/color_241e61"
            android:lineSpacingExtra="3.5sp"
            android:text="@string/edit"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="#323643"
                android:lineSpacingExtra="2.5sp"
                android:text="@string/email"/>
            <TextView

                android:id="@+id/edit_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:textStyle="normal"
                android:textSize="14sp"
                android:layout_marginStart="@dimen/margin_20"
                android:textColor="@color/color_241e61"
                android:lineSpacingExtra="3.5sp"
                android:text="@string/edit"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatEditText
            android:enabled="false"
            android:text="@={profile.email}"
            android:id="@+id/edittext_email"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:hint="@string/email"
            android:backgroundTint="#00000000"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:textStyle="normal"
            android:textSize="14sp"
            android:layout_marginStart="@dimen/margin_20"
            android:textColor="#333333"
            android:maxLength="200"
            android:imeOptions="actionNext"
            tools:text="jayanad87@gmail.com"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="#323643"
                android:lineSpacingExtra="2.5sp"
                android:text="@string/address"/>
            <TextView
                android:id="@+id/edit_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:textStyle="normal"
                android:textSize="14sp"
                android:background="#00000000"
                android:layout_marginStart="@dimen/margin_20"
                android:textColor="@color/color_241e61"
                android:lineSpacingExtra="3.5sp"
                android:text="@string/edit"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatEditText
            android:enabled="false"
            android:text="@={profile.address}"
            android:id="@+id/edittext_address"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#333333"
            android:hint="@string/address"
            android:backgroundTint="#00000000"
            tools:text="123, Papad Gali, Noida.â€¨Uttar Pradesh 201301"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="#323643"
                android:lineSpacingExtra="2.5sp"
                android:text="@string/contact"/>
            <TextView
                android:id="@+id/edit_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:textStyle="normal"
                android:textSize="14sp"
                android:layout_marginStart="@dimen/margin_20"
                android:textColor="@color/color_241e61"
                android:lineSpacingExtra="3.5sp"
                android:visibility="gone"
                android:text="@string/edit"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatEditText
            android:inputType="number"
            android:id="@+id/edittext_mobile"
            android:text="@={profile.mobile}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:fontFamily="@font/montserrat_regular"
            android:textStyle="normal"
            android:enabled="false"
            android:textSize="14sp"
            android:hint="@string/mobile_number"
            android:backgroundTint="#00000000"
            android:textColor="#333333"
            tools:text="9891368556"/>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:visibility="gone"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="#323643"
                android:lineSpacingExtra="2.5sp"
                android:text="@string/driving_license"/>


            <TextView
                android:visibility="gone"
                android:id="@+id/download_dl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:textStyle="normal"
                android:textSize="14sp"
                android:layout_marginStart="@dimen/margin_20"
                android:textColor="@color/color_241e61"
                android:lineSpacingExtra="3.5sp"
                android:text="@string/download"/>

            <TextView
                android:id="@+id/upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:textStyle="normal"
                android:textSize="14sp"
                android:layout_marginStart="@dimen/margin_20"
                android:textColor="@color/color_241e61"
                android:lineSpacingExtra="3.5sp"
                android:text="@string/upload"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatEditText
            android:visibility="gone"
            android:inputType="number"
            android:id="@+id/dl_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:fontFamily="@font/montserrat_regular"
            android:textStyle="normal"
            android:enabled="false"
            android:layout_marginBottom="@dimen/margin_30"
            android:textSize="14sp"
            android:backgroundTint="#00000000"
            android:textColor="#333333"
            tools:text="9891368556"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/save_continue"
            android:layout_marginBottom="@dimen/margin_10"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/redButton"
            android:layout_gravity="center_horizontal|bottom"
            android:text="@string/save_amp_continue"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

</layout>