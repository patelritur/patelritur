<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="homeModel"
            type="com.demo.home.model.HomeModel" />
    </data>
    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLy"
        android:windowDrawsSystemBarBackgrounds="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#00000000"
            android:layout_height="match_parent">
            <include layout="@layout/header_layout"
                app:homeModel="@{homeModel}"
                android:id="@+id/header_ll"
                />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/pager_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/pre_next"
                android:layout_below="@+id/header_ll"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="NEWS"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#222831"
                    android:textStyle="normal" />

                <androidx.viewpager.widget.ViewPager
                    android:layout_margin="@dimen/margin_20"
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/pre_next"
                android:layout_margin="@dimen/margin_20"
                android:gravity="center_horizontal"
                android:layout_above="@+id/ll_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/color_E8505B"
                    android:src="@drawable/ic_baseline_keyboard_arrow_left_24"/>

                <TextView
                    android:id="@+id/previous"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textStyle="normal"
                    android:textColor="#e8505b"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:text="PREVIOUS"/>

                <TextView
                    android:id="@+id/next"
                    android:layout_marginStart="@dimen/margin_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textStyle="normal"
                    android:textColor="#e8505b"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:text="Next"/>
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/color_E8505B"
                    android:rotation="180"
                    android:src="@drawable/ic_baseline_keyboard_arrow_left_24"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <include
                android:id="@+id/ll_bottom"
                layout="@layout/bottom_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                app:homeModel="@{homeModel}" />
        </RelativeLayout>
        <FrameLayout
            android:id="@+id/right_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@color/white"
            android:elevation="50dp"
            android:choiceMode="singleChoice"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp" >
            <include layout="@layout/layout_menu"
                android:id="@+id/left_menu"
                app:homeModel="@{homeModel}"/>
        </FrameLayout>
    </androidx.drawerlayout.widget.DrawerLayout>
</layout>