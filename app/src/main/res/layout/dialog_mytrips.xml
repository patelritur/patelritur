<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="demoTrips"
            type="com.demo.home.profile.model.DemoTripResponseModel.Demotrip" />
    </data>
    <androidx.appcompat.widget.LinearLayoutCompat

        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:gravity="end"
            android:background="#00000000"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/close"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:src="@drawable/close_white"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="@{demoTrips.demoDate}"
            android:fontFamily="@font/montserrat_semibold"
            android:textStyle="normal"
            android:textColor="@color/color_241e61"
            android:layout_marginEnd="@dimen/margin_10"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:letterSpacing="0.01"
            tools:text="Jan 21, 2021"/>

        <androidx.appcompat.widget.AppCompatImageView
            app:homeOptionsImage="@{demoTrips.carImage}"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_gravity="center_horizontal"
            android:layout_width="260dp"
            android:layout_height="130dp"/>

        <TextView
            android:text="@{demoTrips.carName}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/montserrat_semibold"
            android:textStyle="normal"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#333333"
            android:letterSpacing="0.01"
            tools:text="Maruti Ciaz"/>
        <TextView
            android:text="@{demoTrips.fuelType}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:textStyle="normal"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/margin_10"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#333333"
            android:letterSpacing="0.01"
            tools:text="Petrol"/>

        <TextView
            android:text="@{demoTrips.faceliftDesc}"
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#689e5a"
            android:padding="@dimen/margin_10"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:textStyle="normal"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#ffffff"
            tools:text="FACELIFT"/>

            <View style="@style/divider"/>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_20"
            android:weightSum="1"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                app:roundHomeOptionsImage="@{demoTrips.specialistImage}"
                android:layout_width="40dp"
                android:layout_height="@dimen/margin_40"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >
                <TextView
                    android:text="@{demoTrips.specialistName}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textStyle="normal"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="#000000"
                    android:layout_marginBottom="@dimen/textsize_10"
                    tools:text="Rohit Misra"/>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/textsize_10"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/demoscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text='@{demoTrips.specialistTotalDemo + " Demos"}'
                            android:textAppearance="@style/TextAppearance.AppCompat.Small"
                            android:textColor="#aaaaaa"
                            android:textStyle="normal"
                            tools:text="0   " />

                        <RatingBar
                            app:carRating="@{demoTrips.specialistRating}"
                            android:id="@+id/rating"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/demoscount"
                            android:layout_alignLeft="@+id/demoscount"
                            android:layout_gravity="start"
                            android:layout_marginTop="@dimen/margin_10"
                            android:numStars="5"
                            android:rating="3"
                            android:stepSize="0.5"
                            android:theme="@style/RatingBar" />
                    </RelativeLayout>


                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:layout_marginTop="@dimen/margin_10"
                        android:layout_marginRight="@dimen/margin_10"
                        android:background="@drawable/red_circle"/>
                    <TextView
                        android:text="@{demoTrips.companyName}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textStyle="normal"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small"
                        android:textColor="#aaaaaa"
                        tools:text="DD Motors Delhi mundaa delhi"/>


                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.AppCompatImageView
                app:homeOptionsImage="@{demoTrips.companyLogo}"
                android:layout_width="100dp"
                android:layout_height="80dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <View style="@style/divider"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/montserrat_semibold"
            android:textStyle="normal"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#333333"
            android:letterSpacing="0.01"
            android:text="Your Demo Trip"/>

        <com.google.android.gms.maps.MapView
            android:layout_marginBottom="@dimen/margin_20"
            android:id="@+id/map"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_20" />


       <!-- <com.google.android.gms.maps.MapView
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_20"/>-->
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>