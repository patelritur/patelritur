<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="homeModel"
            type="com.demo.home.model.HomeModel" />
    </data>
    <androidx.drawerlayout.widget.DrawerLayout
        android:background="@color/white"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawerLy"
        android:windowDrawsSystemBarBackgrounds="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout

            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#00000000"
            android:layout_height="match_parent">


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="#00000000"
                    android:layout_height="match_parent">
                    <include layout="@layout/header_layout"
                        bind:homeModel="@{homeModel}"
                        android:id="@+id/rl_top"/>

                    <androidx.core.widget.NestedScrollView
                        android:layout_marginBottom="@dimen/margin_20"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/ll_bottom"
                        android:layout_below="@+id/rl_top"
                        android:layout_centerHorizontal="true">


                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/middle_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="@dimen/margin_40"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_active_support" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/margin_30"
                                android:fontFamily="@font/montserrat_bold"
                                android:text="@string/support"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textColor="#222831"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_20"
                                android:fontFamily="@font/montserrat_regular"
                                android:gravity="center_horizontal"
                                android:lineSpacingExtra="1.5sp"
                                android:text="@string/try_the_faq_page_for_your_querries"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="#131313"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/faqs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_20"
                                android:background="@drawable/border_red_deep_rounded_corner"
                                android:fontFamily="@font/montserrat_regular"
                                android:letterSpacing="0.01"
                                android:onClick="@{homeModel::onClick}"
                                android:paddingStart="@dimen/margin_80"
                                android:paddingTop="@dimen/margin_20"
                                android:paddingEnd="@dimen/margin_80"
                                android:paddingBottom="@dimen/margin_20"
                                android:text="@string/faqs"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/color_241e61"
                                android:textStyle="bold" />

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/textsize_20">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/margin_2"
                                    android:layout_gravity="center_vertical"
                                    android:background="#e7e7e7" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:background="@color/white"
                                    android:fontFamily="sans-serif"
                                    android:gravity="center_horizontal"
                                    android:paddingStart="@dimen/margin_20"
                                    android:paddingEnd="@dimen/margin_20"
                                    android:text="@string/or"
                                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                    android:textColor="#333333"
                                    android:textStyle="normal" />
                            </FrameLayout>

                            <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_20"
                                android:fontFamily="@font/montserrat_regular"
                                android:gravity="center_horizontal"
                                android:lineSpacingExtra="1.5sp"
                                android:text="@string/please_feel_free_to_write_to_us_at"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="#131313"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/email_support"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_20"
                                android:fontFamily="@font/montserrat_semibold"
                                android:text="support@demo.com"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="@color/color_241e61"
                                android:textStyle="normal" />

                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.core.widget.NestedScrollView>

                    <androidx.fragment.app.FragmentContainerView
                        android:visibility="gone"
                        android:id="@+id/fragment_faq"
                        android:name="com.demo.faq.FAQFragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@id/ll_bottom"
                        android:layout_below="@+id/rl_top" />

                    <include
                        android:id="@+id/ll_bottom"
                        layout="@layout/bottom_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        bind:homeModel="@{homeModel}" />

                </RelativeLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </RelativeLayout>
        <FrameLayout
            android:id="@+id/right_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@color/white"
            android:elevation="50dp"
            android:choiceMode="singleChoice"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp" >
            <include layout="@layout/layout_menu"
                android:id="@+id/left_menu"
                bind:homeModel="@{homeModel}"/>
        </FrameLayout>
    </androidx.drawerlayout.widget.DrawerLayout>
</layout>