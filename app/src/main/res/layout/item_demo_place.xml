<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="menuModel"
            type="com.demo.home.model.Demomenu" />
    </data>
<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="2"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_weight="1.9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginEnd="@dimen/margin_5"
        app:cardCornerRadius="@dimen/margin_10"
        app:cardElevation="@dimen/margin_10">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_book_demo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_15"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_marginEnd="@dimen/margin_5"
                android:layout_width="@dimen/margin_25"
                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/margin_25"
                android:src="@drawable/ic_download"
                app:homeOptionsImage="@{menuModel.MenuIcon}"
                />
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginStart="@dimen/margin_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:textColor="#363636"
                    android:fontFamily="@font/montserrat_bold"
                    android:autoSizeTextType="uniform"
                    android:maxLines="2"
                    android:minLines="2"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    tools:text="At dealership \n sdsd"
                    android:autoSizeMinTextSize="16sp"
                    android:autoSizeStepGranularity="2sp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:text="@{menuModel.MenuName}"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="#333333"
                    android:visibility="gone"
                    android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/margin_10"
        android:layout_marginStart="@dimen/margin_5"
        android:layout_marginEnd="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10"
        app:cardElevation="@dimen/margin_10">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_schedule"
            android:padding="@dimen/margin_10"
            android:layout_margin="@dimen/margin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="25dp"
                android:tint="@color/color_241e61"
                android:src="@drawable/ic_image_schedule"
                android:layout_gravity="center"
                android:layout_height="25dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/schedule"
                android:fontFamily="@font/montserrat_semibold"
                android:singleLine="true"
                android:textColor="@color/color_241e61"
                android:textSize="10sp"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>
</androidx.appcompat.widget.LinearLayoutCompat>
</layout>