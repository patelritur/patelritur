                      android:src="@drawable/ic_notifications" />
              </RelativeLayout>-->

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/rl_top" />

            <include
                android:id="@+id/ll_bottom"
                layout="@layout/bottom_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                bind:homeModel="@{homeModel}" />

            <include
                android:id="@+id/ll_name"
                layout="@layout/name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/map"
                bind:homeModel="@{homeModel}" />


            <include
                android:id="@+id/layout_options_demo"
                layout="@layout/layout_demo_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/ll_bottom"
                android:layout_below="@id/ll_name"
                bind:homeModel="@{homeModel}" />
            <!--
                    <androidx.coordinatorlayout.widget.CoordinatorLayout
                        android:id="@+id/coordinator"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_above="@id/ll_bottom"
                        android:layout_below="@id/rl_top"
                        android:fitsSystemWindows="true"
                        android:visibility="gone">
                        <include
                            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
                            app:behavior_hideable="true"
                            android:id="@+id/layout_drive_demo"
                            layout="@layout/layout_personalised_car"
                            android:layout_width="match_parent"
                            android:layout_below="@id/ll_name"
                            android:layout_above="@id/ll_bottom"
                            android:layout_height="wrap_content"
                            />
                    </androidx.coordinatorlayout.widget.CoordinatorLayout>-->

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/coordinator11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/ll_bottom"
                android:layout_below="@id/rl_top"
                android:fitsSystemWindows="true"
                android:visibility="gone"
                android:orientation="vertical">

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/fragment_container_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:behavior_hideable="true"
                    android:tag="takeAdemo"
                    android:background="@drawable/behavior_rounded_corner"
                    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior" />
            </androidx.coordinatorlayout.widget.CoordinatorLayout>

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:id="@+id/coordinator_schedule"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/ll_bottom"
                android:layout_below="@id/rl_top"
                android:visibility="gone"
                android:orientation="vertical">

                <androidx.fragment.app.FragmentContainerView
                    android:id="@+id/schedule_fragment_container_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:behavior_hideable="true"
                    android:tag="schedule"
                    android:background="@drawable/behavior_rounded_corner"
                    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior" />
            </androidx.coordinatorlayout.widget.CoordinatorLayout>


        </RelativeLayout>
        <FrameLayout
            android:id="@+id/right_drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@color/white"
            android:elevation="50dp"
            android:choiceMode="singleChoice"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp" >
            <include layout="@layout/layout_menu"
                android:id="@+id/left_menu"
                bind:homeModel="@{homeModel}"/>
        </FrameLayout>
    </androidx.drawerlayout.widget.DrawerLayout>
</layout>