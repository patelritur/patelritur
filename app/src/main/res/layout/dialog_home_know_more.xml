<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="homeModel"
            type="com.demo.home.model.HomeModel" />
        <variable
            name="type"
            type="String" />
    </data>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:gravity="end"
            android:background="#00000000"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/close"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:src="@drawable/close_white"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:background="@drawable/google_rounded_corner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginTop="@dimen/margin_20"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/color_241e61"
                android:text='@{type.equalsIgnoreCase("specialist") ?homeModel.homeMenuFirstName : homeModel.homeMenuSecondName}'
                android:layout_gravity="center"/>
            <View style="@style/divider"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center"
                app:homeOptionsImage='@{type.equalsIgnoreCase("specialist") ?homeModel.homeMenuFirstImage : homeModel.homeMenuSecondImage}'
                android:layout_width="@dimen/margin_60"
                android:layout_height="60dp"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_margin="@dimen/margin_20"
                android:text="@{homeModel.descriptions}"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@color/color_222831"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/know_more"
                android:textColor="@color/color_241e61"
                android:layout_margin="@dimen/margin_20"
                android:fontFamily="@font/montserrat_bold"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:text='@{type.equalsIgnoreCase("specialist") ?homeModel.homeMenuFirstName : homeModel.homeMenuSecondName+" now"}'
                android:drawableEnd="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:drawableTint="@color/color_241e61"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>